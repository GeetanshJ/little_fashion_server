<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Social Admin</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">

        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap" rel="stylesheet">

        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/bootstrap-icons.css" rel="stylesheet">

        <link rel="stylesheet" href="/css/slick.css"/>

        <link href="/css/tooplate-little-fashion.css" rel="stylesheet">
  <style>
    body {
      width: 100%;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0px;
      background-color: #f4f4f4;
    }

    .container {
      margin: auto;
      background-color: #fff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
      margin-bottom: 20px;
    }

    .form-floating {
      margin-bottom: 15px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      font-weight: bold;
    }

    input, select {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 4px;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }

    .message {
      margin-top: 20px;
      padding: 10px;
      background-color: #e7f3fe;
      border-left: 6px solid #2196F3;
    }

    .product-grid {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      margin-top: 40px;
    }

    .product-card {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      width: calc(33.333% - 20px);
      box-sizing: border-box;
    }

    .product-card img {
      max-width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 4px;
      margin-bottom: 10px;
    }

    .button-container {
      margin-top: 10px;
    }

    .button-container button {
      margin-right: 10px;
    }
    @media (max-width: 1200px) {
      .product-card {
        width: 100%;
      }
    }

  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/">
        <strong><span>Little</span> Fashion</strong>
      </a> 
    </div>
  </nav>
  <br><br><br><br><br><br><br><br>
  <div class="container">
    <h2>Add Social Media Icon</h2>
    <form method="post" action="/addSocialMedia" enctype="application/x-www-form-urlencoded">
      <label for="name">name</label>

      <div class="form-floating">
        <input type="text" name="name" id="name" required />
      </div>
      <label for="link">Link</label>

    <div class="form-floating">
        <input type="text" name="link" id="link" required />
      </div>

      <button type="submit">Submit</button>
    </form>

    <% if (socialMediaMessage) { %>
      <div class="message"><%= socialMediaMessage %></div>
    <% } %>

    <div class="product-grid">
      <% if (socialMediaData) { %>
        <% socialMediaData.forEach(socialMedia => { %>
          <div class="product-card">
            <h3 class="<%= socialMedia.name %>"></h3>
            <p><%= socialMedia.link %></p>

            <div class="button-container">
              <a href="/updateSocialMedia/<%= socialMedia.id %>">
                <button>Update</button>
              </a>
              <a href="/deleteSocialMedia/<%= socialMedia.id %>">
                <button>Delete</button>
              </a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div>No Data Found!!</div>
      <% } %>
    </div>
  </div>
  <script src="/js/jquery.min.js"></script>
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script src="/js/Headroom.js"></script>
  <script src="/js/jQuery.headroom.js"></script>
  <script src="/js/slick.min.js"></script>
  <script src="/js/custom.js"></script>
</body>
</html>
